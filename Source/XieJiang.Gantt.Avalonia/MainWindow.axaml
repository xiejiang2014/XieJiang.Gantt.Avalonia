<Window
    x:Class="XieJiang.Gantt.Avalonia.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonia="clr-namespace:XieJiang.Gantt.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="XieJiang.Gantt.Avalonia"
    Padding="10"
    d:DesignHeight="650"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid RowDefinitions="*,Auto">
        <avalonia:GanttControl
            x:Name="GanttControl"
            DateMode="Weekly"
            DependencyLinePointerPressed="GanttControl_OnDependencyLinePointerPressed"
            DragUnit="Daily"
            EndDate="2028-2-28"
            StartDate="2024-12-20" />

        <!--  HeaderRow1Height="60"  -->
        <!--  HeaderRow2Height="70"  -->
        <!--  RowHeight="100"  -->
        <!--  TaskBarHeight="70"  -->
        <StackPanel
            Grid.Row="1"
            Orientation="Horizontal">
            <Button Click="ButtonReload_OnClick">Reload</Button>


            <Button Click="ButtonToday_OnClick">Today</Button>

            <Button Click="ButtonWeekly_OnClick">Weekly</Button>
            <Button Click="ButtonMonthly_OnClick">Monthly</Button>
            <Button Click="ButtonSeasonally_OnClick">Seasonally</Button>
            <Button Click="ButtonYearly_OnClick">Yearly</Button>

        </StackPanel>

        <!--<Slider Ticks=""></Slider>-->
    </Grid>
    <!--<avalonia:TemplatedControl1 />-->
</Window>