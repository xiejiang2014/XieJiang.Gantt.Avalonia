<Window
    x:Class="XieJiang.Gantt.Avalonia.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonia="clr-namespace:XieJiang.Gantt.Avalonia"
    xmlns:avalonia1="clr-namespace:XieJiang.Gantt.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="XieJiang.Gantt.Avalonia"
    Padding="10"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid RowDefinitions="*,Auto">
        <avalonia:GanttControl
            x:Name="GanttControl"
            StartDate="2024-1-1" />

        <StackPanel
            Grid.Row="1"
            Orientation="Horizontal">
            <Button Click="Button_OnClick">XXX</Button>
        </StackPanel>
    </Grid>

</Window>
