<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTheme
        x:Key="TemporaryDependencyLine"
        TargetType="Line">
        <Setter
            Property="Stroke"
            Value="{DynamicResource DependencyLine}" />
        <Setter
            Property="StrokeThickness"
            Value="2" />
        <Setter
            Property="StrokeDashArray"
            Value="2,2" />

        <Style Selector="^:Reject">
            <Setter
                Property="Stroke"
                Value="{DynamicResource DependencyLineReject}" />
            <Setter
                Property="StrokeDashArray"
                Value="" />
        </Style>

        <Style Selector="^:Accept">
            <Setter
                Property="Stroke"
                Value="{DynamicResource DependencyLineAccept}" />

            <Setter
                Property="StrokeDashArray"
                Value="" />
        </Style>
    </ControlTheme>


</ResourceDictionary>