<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTheme
        x:Key="BodyBackgroundRectangle"
        TargetType="Rectangle">


        <Style Selector="^.BackgroundRectangle">
            <Setter
                Property="Fill"
                Value="{DynamicResource BackgroundBrush}" />

            <Style Selector="^.RestDay">
                <Setter
                    Property="Fill"
                    Value="{DynamicResource RestDayBackgroundBrush}" />
            </Style>
        </Style>

        <Style Selector="^.FirstDayOfWeek">
            <Setter
                Property="Fill"
                Value="{DynamicResource DarkGridBrush}" />
        </Style>

    </ControlTheme>
</ResourceDictionary>
