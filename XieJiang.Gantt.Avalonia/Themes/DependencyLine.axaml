<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:XieJiang.Gantt.Avalonia.Controls">

    <Design.PreviewWith>
        <Panel
            Width="800"
            Height="500">
            <controls:GanttBodyBackground VerticalAlignment="Stretch" />
        </Panel>
    </Design.PreviewWith>

    <ControlTheme
        x:Key="{x:Type controls:DependencyLine}"
        TargetType="controls:DependencyLine">
        <Setter
            Property="Cursor"
            Value="hand" />
        <Setter
            Property="Stroke"
            Value="LightGray" />
        <Setter
            Property="Fill"
            Value="LightGray" />
        <Setter
            Property="StrokeThickness"
            Value="2" />

        <Style Selector="^:pointerover">
            <Setter
                Property="ZIndex"
                Value="2" />
        </Style>
    </ControlTheme>


</ResourceDictionary>